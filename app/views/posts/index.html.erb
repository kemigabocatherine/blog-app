<nav><%= link_to "Home", users_path(@user), class: "link" %></nav>
<div>
  <div>
    <img src = "<%= @user.photo %>" alt= "User image">
  </div>
  <div class="user-info">
    <h1><%= @user.name %></h1>
    <p>Number of posts: <%= @user.posts_counter %></p>
  </div>

  <ul>
    <% @user.posts.each do |post| %>
        <div class="post_container">
          <%=link_to user_post_path(@user, post) do %>
            <h3><%= post.title%></h3>
          <% end %>
          <%= post.text%>
          <strong><p>Comments:</strong> <%= post.comments_counter%></p>
          <strong><p>Likes:</strong> <%= post.likes_counter%></p>
        </div>
      <div class="comments-container">
        <% post.recent_comments.includes([:user]).each do |comment| %>
          <p><%= comment.user.name %>: <%= comment.text%></p>
        <% end %>
      </div>
    <% end %>
  </ul>  
  <button>Pagination</button>
</div>


